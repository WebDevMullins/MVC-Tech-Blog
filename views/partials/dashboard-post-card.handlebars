<!-- Article representing a Post -->
<article class='p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700'>
	<!-- Date Created Display -->
	<div class='flex justify-end items-center mb-5 text-gray-500 text-sm'>
		{{format_date date_created}}
	</div>

	<!-- Post Title -->
	<h2 class='mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white'>
		<!-- Link to the Post Detail Page -->
		<a href='/posts/{{id}}'>{{title}}</a>
	</h2>

	<!-- Post Content -->
	<p class='mb-5 font-light text-gray-500 dark:text-gray-400'>
		{{content}}
	</p>

	<!-- Footer Section with User Name and Edit Link -->
	<div class='flex justify-between items-center'>
		<!-- Display User's Name -->
		<div class='flex items-center space-x-4 font-medium'>
			{{user.name}}
		</div>

		<!-- Edit Link for the Post -->
		<a
			href='/dashboard/edit/{{id}}'
			class='inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline'
		>
			Edit
		</a>
	</div>
</article>